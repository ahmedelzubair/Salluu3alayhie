<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:fillViewport="true"
    tools:context="com.apk4android.salluu3alayhie.ui.AboutActivity">

    <RelativeLayout
        android:id="@+id/RLAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_large"
        android:paddingBottom="100dp">

        <!-- App Icon and Title Section -->
        <LinearLayout
            android:id="@+id/headerSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/spacing_medium">

            <!-- App Icon -->
            <ImageView
                android:id="@+id/appIcon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/ic_launcher"
                android:background="@drawable/circle_background"
                android:padding="8dp" />

            <!-- App Name -->
            <TextView
                android:id="@+id/appName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_small"
                android:text="@string/app_name"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- App Description -->
            <TextView
                android:id="@+id/appDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_large"
                android:gravity="center"
                android:text="@string/txt_about"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:alpha="0.9" />

        </LinearLayout>

        <!-- About Image Section -->
        <LinearLayout
            android:id="@+id/imageSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/headerSection"
            android:layout_marginBottom="@dimen/spacing_large"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ImageAbout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginHorizontal="@dimen/spacing_medium"
                android:contentDescription="@string/txt_about"
                android:src="@drawable/about"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_image_background" />

        </LinearLayout>

        <!-- Developer Information Section -->
        <LinearLayout
            android:id="@+id/developerSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageSection"
            android:layout_marginBottom="@dimen/spacing_large"
            android:background="@drawable/developer_card_background"
            android:orientation="vertical"
            android:padding="@dimen/spacing_medium">

            <!-- Section Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:text="المطور / Developer"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Developer Info -->
            <TextView
                android:id="@+id/developerInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:gravity="center"
                android:text="@string/aboutTextView"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp" />

            <!-- Website Link -->
            <TextView
                android:id="@+id/wadelzbuair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/website_button_background"
                android:gravity="center"
                android:paddingHorizontal="@dimen/spacing_medium"
                android:paddingVertical="@dimen/spacing_small"
                android:text="@string/ahmed_elzubair"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground" />

        </LinearLayout>

        <!-- App Features Section -->
        <LinearLayout
            android:id="@+id/featuresSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/developerSection"
            android:layout_marginBottom="@dimen/spacing_large"
            android:background="@drawable/features_card_background"
            android:orientation="vertical"
            android:padding="@dimen/spacing_medium">

            <!-- Section Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:text="@string/app_features_title"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Features List -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_small"
                    android:drawableStart="@drawable/ic_feature"
                    android:drawablePadding="@dimen/spacing_small"
                    android:gravity="center_vertical"
                    android:text="@string/feature_prayer_reminder"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_small"
                    android:drawableStart="@drawable/ic_feature"
                    android:drawablePadding="@dimen/spacing_small"
                    android:gravity="center_vertical"
                    android:text="@string/feature_timer_options"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_small"
                    android:drawableStart="@drawable/ic_feature"
                    android:drawablePadding="@dimen/spacing_small"
                    android:gravity="center_vertical"
                    android:text="@string/feature_audio_notifications"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_feature"
                    android:drawablePadding="@dimen/spacing_small"
                    android:gravity="center_vertical"
                    android:text="@string/feature_background_service"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Version and Copyright Section -->
        <LinearLayout
            android:id="@+id/footerSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/featuresSection"
            android:layout_marginBottom="80dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/spacing_medium">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_small"
                android:text="Version 1.4.0"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:alpha="0.7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="© 2024 Ahmed Elzubair. All rights reserved."
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:alpha="0.6" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>