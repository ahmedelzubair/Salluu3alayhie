<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RLMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:paddingBottom="24dp"
    tools:context="com.apk4android.salluu3alayhie.ui.MainActivity">

    <!-- Top Menu Buttons -->
    <LinearLayout
        android:id="@+id/topMenuLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/statusBarSize"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="end">

        <Button
            android:id="@+id/btnAbout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:background="@drawable/btn_rounded_primary"
            android:onClick="openAbout"
            android:padding="8dp"
            android:text="@string/about_app"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnShare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:background="@drawable/btn_rounded_primary"
            android:onClick="shareApp"
            android:padding="8dp"
            android:text="@string/share_app"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topMenuLayout"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="16dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="3dp">

            <!-- Quran Verse Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/ayaCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/textViewAya"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:lineSpacingExtra="2dp"
                        android:text="@string/the_aya"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Timer Selection Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/textViewChose"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"
                        android:text="@string/alarm_period"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/rgTimes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/radio5Min"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:buttonTint="@color/white"
                            android:checked="true"
                            android:padding="5dp"
                            android:text="@string/p_5_min"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <RadioButton
                            android:id="@+id/radio10Min"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:buttonTint="@color/white"
                            android:padding="5dp"
                            android:text="@string/p_10_min"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <RadioButton
                            android:id="@+id/radio15Min"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:buttonTint="@color/white"
                            android:padding="5dp"
                            android:text="@string/p_15_min"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <RadioButton
                            android:id="@+id/radio20Min"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:buttonTint="@color/white"
                            android:padding="5dp"
                            android:text="@string/p_20_min"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <RadioButton
                            android:id="@+id/radio25Min"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:buttonTint="@color/white"
                            android:padding="5dp"
                            android:text="@string/p_25_min"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <RadioButton
                            android:id="@+id/radio30Min"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:buttonTint="@color/white"
                            android:padding="5dp"
                            android:text="@string/p_30_min"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Notification Type Selection Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@color/colorPrimaryDark">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/textViewChoseVoiceType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"
                        android:text="@string/choseNotiType"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/rgNotiType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/rbAya"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:buttonTint="@color/white"
                            android:padding="5dp"
                            android:text="@string/aya_reminder"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <RadioButton
                            android:id="@+id/rbVoice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:buttonTint="@color/white"
                            android:checked="true"
                            android:padding="5dp"
                            android:text="@string/voice_reminder"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                    </RadioGroup>

                    <Button
                        android:id="@+id/btnStartAlarm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/btn_rounded_primary"
                        android:onClick="startAlarm"
                        android:padding="12dp"
                        android:text="@string/start"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Stop Button -->
            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/btn_rounded_red"
                android:onClick="stopAlarm"
                android:padding="12dp"
                android:text="@string/stop"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>