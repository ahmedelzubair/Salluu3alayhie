<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RLMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.apk4android.salluu3alayhie.ui.MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/ayaCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_medium"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/spacing_xmedium"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewAya"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@color/colorPrimaryDark"
                        android:padding="@dimen/spacing_medium"
                        android:text="@string/the_aya"
                        android:textColor="#fff"
                        android:textSize="18sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:id="@+id/RelativeAll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/ayaCard"
                android:layout_margin="@dimen/spacing_medium">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_medium"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="@dimen/spacing_xmedium"
                    app:cardElevation="3dp">


                    <LinearLayout
                        android:id="@+id/LinRadioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimaryDark"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textViewChose"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:gravity="center"
                            android:text="@string/alarm_period"
                            android:textColor="@color/white"
                            android:textColorLink="@android:color/background_dark"
                            android:textSize="18sp" />


                        <RadioGroup
                            android:id="@+id/rgTimes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="7dp"
                            android:layout_weight="1">

                            <RadioButton
                                android:id="@+id/radio5Min"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/spacing_xmedium"
                                android:layout_marginRight="@dimen/spacing_large"
                                android:buttonTint="@color/white"
                                android:checked="true"
                                android:text="5 دقائق"
                                android:textColor="@color/white" />

                            <RadioButton
                                android:id="@+id/radio10Min"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/spacing_xmedium"
                                android:layout_marginRight="@dimen/spacing_large"
                                android:buttonTint="@color/white"
                                android:text="10 دقائق"
                                android:textColor="@color/white" />

                            <RadioButton
                                android:id="@+id/radio15Min"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/spacing_xmedium"
                                android:layout_marginRight="@dimen/spacing_large"
                                android:buttonTint="@color/white"
                                android:text="15 دقيقة"
                                android:textColor="@color/white" />

                            <RadioButton
                                android:id="@+id/radio20Min"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/spacing_xmedium"
                                android:layout_marginRight="@dimen/spacing_large"
                                android:buttonTint="@color/white"
                                android:text="20 دقيقة"
                                android:textColor="@color/white" />

                            <RadioButton
                                android:id="@+id/radio25Min"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/spacing_xmedium"
                                android:layout_marginRight="@dimen/spacing_large"
                                android:buttonTint="@color/white"
                                android:text="25 دقيقة"
                                android:textColor="@color/white" />

                            <RadioButton
                                android:id="@+id/radio30Min"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/spacing_xmedium"
                                android:layout_marginRight="@dimen/spacing_large"
                                android:buttonTint="@color/white"
                                android:text="30 دقيقة"
                                android:textColor="@color/white" />
                        </RadioGroup>

                        <LinearLayout
                            android:id="@+id/NotificationTypeBtnStart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:orientation="vertical">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="@dimen/spacing_large"
                                android:background="@color/white" />

                            <TextView
                                android:id="@+id/textViewChoseVoiceType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:gravity="center"
                                android:text="@string/choseNotiType"
                                android:textColor="@color/white"
                                android:textColorLink="@android:color/background_dark"
                                android:textSize="18sp" />

                            <RadioGroup
                                android:id="@+id/rgNotiType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp">

                                <RadioButton
                                    android:id="@+id/rbAya"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/spacing_xmedium"
                                    android:layout_marginLeft="@dimen/spacing_xmedium"
                                    android:layout_marginEnd="@dimen/spacing_large"
                                    android:layout_marginRight="@dimen/spacing_large"
                                    android:buttonTint="@color/white"
                                    android:text="تذكير بآية"
                                    android:textColor="@color/white" />

                                <RadioButton
                                    android:id="@+id/rbVoice"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/spacing_xmedium"
                                    android:layout_marginRight="@dimen/spacing_large"
                                    android:buttonTint="@color/white"
                                    android:checked="true"
                                    android:text="تذكير بصوت"
                                    android:textColor="@color/white" />

                            </RadioGroup>

                            <Button
                                android:id="@+id/btnStartAlarm"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="11dp"
                                android:layout_marginBottom="@dimen/spacing_medium"
                                android:background="@drawable/btn_rounded_primary"
                                android:onClick="startAlarm"
                                android:text="@string/start"
                                android:textColor="#fff" />
                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </RelativeLayout>
        </LinearLayout>

    </ScrollView>


    <Button
        android:id="@+id/btnCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_rounded_red"
        android:onClick="stopAlarm"
        android:text="@string/stop"
        android:textColor="@color/white" />

</RelativeLayout>