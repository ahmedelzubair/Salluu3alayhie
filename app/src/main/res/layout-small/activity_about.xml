<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/small_bg"
    tools:context="com.apk4android.salluu3alayhie.ui.AboutActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp">

        <TextView
            android:textAlignment="gravity"
            android:id="@+id/appName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/txt_about"
            android:textColor="@color/colorFont"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/ImageAbout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/appName2"
            android:src="@drawable/about"
            android:contentDescription="TODO" />

        <TextView
            android:textAlignment="center"
            android:id="@+id/copyRights"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ImageAbout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:autoLink="web"
            android:clickable="true"
            android:text="@string/aboutTextView"
            android:textColor="@color/colorFont"
            android:textSize="18sp"
            android:focusable="true" />


    </RelativeLayout>
</RelativeLayout>